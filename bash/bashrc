# -*- mode:shell-script -*-

# This file is supposed to be sourced from ~/.bashrc. It contains
# customizations that are applicable for interactive shells.

# Enable globbing of **
shopt -s globstar

for script in ${HOME}/.local/software/**/bash-completions/*; do
    if [ -f "${script}" ]; then
        source "${script}"
    fi
done

clang_bash_completions=/usr/lib/llvm-7/share/clang/bash-autocomplete.sh
if [ -r "${clang_bash_completions}" ]; then
    source "${clang_bash_completions}"
fi

alias l="git log --stat"
alias s="git status"
alias d="git diff"
alias a="git add"
alias c="git commit"

my_dir="$(dirname "${BASH_SOURCE[0]}")"
source "${my_dir}"/prompt/loudprompt.sh
